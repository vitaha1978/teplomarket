<%= provide(:description, "Перелік продукції") %>
<%= provide(:title, "Перелік продукції") %>

<h1 class="brand">Каталог продукції</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url, class: "img-thumbnail", width: 100) %>
    <h3><%= link_to product.title, product %></h3>
    <p>
      <%= truncate(strip_tags(product.description), length: 150) %>
      <%= link_to 'далі...', product %>
    </p>
    <div class="price_line ">
      <span>
        <s><%= sprintf("%0.02f", product.price) %> грн.</s>
      </span>
      <span class="price">
        <% if product.brand.discount %>
          <%= sprintf("%0.02f", product.price - (product.price / 100 * product.brand.discount) ) %> грн.
        <% else %>
          <%= sprintf("%0.02f", product.price * 0.95 ) %> грн.
        <% end %>
      </span>
      <%= button_to 'Додати до корзини', line_items_path(product_id: product),
                       class: "btn btn-primary btn-xs pull-right" %>
    </div>
  </div>
<% end %>
