<% provide(:title, @user.name) %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="row gravatar">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <span class="text"><%= @user.name %></span>
      </h1>
    </section>
  </aside>
</div>