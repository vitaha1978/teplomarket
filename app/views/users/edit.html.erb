<% provide(:title, "Редагувати профіль") %>
<h1>Редагувати профіль</h1>

<div class="row edit_user">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
    
    <%= render 'fields', f: f %>

      <div class="actions"><br>
        <%= f.submit "Зберегти зміни", class: "btn btn-xs btn-primary" %><br>
      </div><br>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Змінити аватарку</a>
  </div>
</div>