<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>  
  <div class="field">
    <%= f.label :img_url %><br>
    <%= f.text_field :img_url, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "form-control", rows: 8 %>
  </div>
  <div class="field">
    <%= f.label :category_id, "Виберіть категорію" %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Виберіть категорію"}, {class: "form-control"} %>
  </div>
  <div class="actions"><br>
    <%= f.submit, class: "btn btn-primary" %>
  </div>
<% end %>
