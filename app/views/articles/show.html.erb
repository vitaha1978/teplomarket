<% provide( :description, @article.description ) %>
<% provide( :title, @article.title ) %>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>


<div id="article" class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= @article.name %>
    </h3>
  </div>
  <div class="panel-body">    
    <%= sanitize(@article.text) %>
  </div>
</div>

<script type="text/javascript" src="//yandex.st/share/share.js"charset="utf-8"></script>
<div class="yashare-auto-init" data-yashareL10n="ru"
         data-yashareQuickServices="vkontakte,facebook,twitter,odnoklassniki,moimir,gplus" data-yashareTheme="counter"></div> 
<br>

<%= link_to 'Назад', articles_path %> |
<%= link_to 'Редагувати', edit_article_path(@article) %> |
<%= link_to 'Видалити', @article, method: :delete, data: { confirm: 'Ви впевнені?' } %>