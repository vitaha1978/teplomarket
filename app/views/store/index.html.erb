<%= provide(:description, "Каталог продукції") %>
<%= provide(:title, "Каталог продукції") %>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<h1 class="brand">Акційна пропозиція -15%</h1>
<div  id="main_presentation" class="row text-center welly">  
  <% @products.each do |product| %>
  <div class="col-md-3">
    <%= image_tag(product.image_url, class: "img-thumbnail m_welly", width: 120) %>
    <div class="title">
      <%= link_to product.mini_title, product %>
    </div>
    <span class="price">
      <s><%= sprintf("%0.02f", product.price) %> грн.</s>
    </span><br>
    <span class="price_disc brand">
      <strong><%= sprintf("%0.02f", product.price * 0.85) %> грн.</strong>
    </span>
    <%= button_to 'Купити', line_items_path(product_id: product),
                      class: "btn btn-primary btn-xs" %>
  </div>
  <% end %>
</div>

<% @articles.each do |article| %>
  <div id="articles" class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to article.name, article_path(article) %>
      </h3>
    </div>
    <div class="panel-body">
      <p>
        <%= truncate(strip_tags(article.text), length: 300) %>
       </p> 
      <div class="pull-right">
        <%= link_to "Продовжити...", article, class: 'pull-right' %>
      </div>
    </div>
  </div>
<% end %>

