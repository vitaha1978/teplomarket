<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<p>
  <strong class="brand">Категорія - <%= @category.name %></strong>  
</p>
<% @category.articles.each do |article| %>

  <div id="articles" class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to article.name, article_path(article) %>
      </h3>
    </div>
    <div class="panel-body">
      <p>
        <%= image_tag(article.img_url, class: "img-thumbnail welly", width: 150) %>
      </p>
      <p>
        <%= truncate(strip_tags(article.text), length: 300) %>
       </p> 
      <div class="pull-right">
        <%= link_to "Продовжити...", article, class: 'pull-right' %>
      </div>
    </div>
  </div>
<% end %>


<p>
  <%= link_to 'Редагувати', edit_category_path(@category) %> |
  <%= link_to 'Назад', categories_path %>
</p>
